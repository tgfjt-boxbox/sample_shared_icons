@font-face {
  font-family: "{{fontName}}";
  font-style: normal;
  font-weight: 400;
  font-display: block;
  src: url("../fonts/{{fontName}}.ttf");
  src: url("../fonts/{{fontName}}.woff2") format("woff2"), url("../fonts/{{fontName}}.ttf") format("truetype");
}

.{{fontName}} {
  font-family: "{{fontName}}";
  font-weight: normal;
  font-style: normal;
  font-size: 1em;
  display: inline-block;
  line-height: 1;
  text-transform: none;
  letter-spacing: normal;
  word-wrap: normal;
  white-space: nowrap;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

{{#icons}}
.{{fontName}}-{{name}}::after {
  content: '\{{unicode}}';
}

{{/icons}}
